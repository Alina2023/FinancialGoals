<Window x:Class="FinancialGoals.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:FinancialGoals.Views"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report" Height="600" Width="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Report for:" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Name="txtGoalName" Margin="6,0"/>
            <Button Content="Simulate All" Click="BtnSimulateAll_Click" Margin="12,0"/>
        </StackPanel>

     
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <Canvas Name="chartCanvas" Height="180" Background="White"/>
            </ScrollViewer>
        </Border>

        <DataGrid Grid.Row="2" Name="dgRows" AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</Window>

